function in_docker()
{
  if [ -f /.dockerenv ]; then
    echo "[Docker]"
  fi
}

COMMAND_PROMPT_HEADER='$(in_docker)${ROS_MASTER_URI#http://}'$GIT_PS1

if [ ! -z "$COMMAND_PROMPT_HEADER" ]; then
  COMMAND_PROMPT_HEADER="$COMMAND_PROMPT_HEADER\n"
fi

COMMAND_PROMPT='${debian_chroot:+($debian_chroot)}\[\033[01;32m\]\a\[\033[00m\]'$COMMAND_PROMPT_HEADER'\[\033[01;34m\]\w\[\033[00m\]\$ '

PS1=$COMMAND_PROMPT
case "$TERM" in
    xterm*|rxvt*)
        PS1="$TITLEBAR$PS1"
        ;;
    *)
        ;;
esac
